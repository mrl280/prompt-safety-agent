{
    "name": "Prompt Safety Agent",
    "initializeCommand": "bash .devcontainer/initialize-command.sh",
    "build": {
        "context": "..",
        "dockerfile": "Dockerfile",
        "args": {
            "USERNAME": "agent",
            "USER_UID": 1000,
            "USER_GID": 1000
        }
    },
    "features": {
        "ghcr.io/devcontainers/features/common-utils:2": {
            "installZsh": true,
            "configureZshAsDefaultShell": true,
            "userUid": 1000,
            "userGid": 1000
        }
    },
    "runArgs": [
        // Give the container GPU access. To put it simply, use --gpus on x86 and --runtime=nvidia on jetson/ARM SBSA.
        "--gpus=all",
        // "--runtime=nvidia",
        // Map port 8000 on host to port 8000 in container for Flask app access
        "-p",
        "8000:8000"
    ],
    "workspaceMount": "source=${localWorkspaceFolder},target=/app,type=bind,consistency=cached",
    "workspaceFolder": "/app",
    "customizations": {
        "vscode": {
            "settings": {
                "editor.formatOnSave": true,
                "[python]": {
                    "editor.defaultFormatter": "ms-python.black-formatter",
                    "editor.codeActionsOnSave": {
                        "source.organizeImports": true
                    }
                },
                "python.sortImports.args": [
                    "--profile",
                    "black"
                ]
            },
            "extensions": [
                "ms-azuretools.vscode-docker",
                "ms-python.python",
                "ms-python.black-formatter",
                "ms-python.vscode-pylance",
                "ms-python.flake8",
                "ms-python.isort",
                "redhat.vscode-yaml",
                "shd101wyy.markdown-preview-enhanced",
                "stkb.rewrap",
                "ms-toolsai.jupyter",
                "tamasfe.even-better-toml",
                "docker.docker",
                "davidanson.vscode-markdownlint"
            ]
        }
    },
    "remoteUser": "agent"
}